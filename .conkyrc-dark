background no
use_xft yes
xftfont Terminus:pixelsize=12
xftalpha 0.8
out_to_console no
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type override
own_window_hints below,undecorated,sticky,skip_taskbar
double_buffer yes
minimum_size 1260
maximum_width 1260
draw_shades no
draw_outline no
draw_borders no
border_width 1
default_color 1d6183
alignment top_left
#alignment top_right
#alignment bottom_left
#alignment bottom_right

gap_x 30
gap_y 5 
no_buffers yes
uppercase no
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes

use_spacer none


